<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/itemimageview"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/itemnameview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:textStyle="bold"
        android:textColor="#013370"
        android:text="itemName"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@id/itemimageview"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/priceview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="Price"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toRightOf="@id/itemimageview"
        app:layout_constraintTop_toBottomOf="@id/itemnameview"
        />

    <TextView
        android:id="@+id/quanitiyview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="quantity"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/priceview"
        app:layout_constraintLeft_toRightOf="@id/itemimageview"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"
        />

    <Button
        android:id="@+id/sellview"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginRight="20dp"
        android:text="SELL"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/quanitiyview" />

</android.support.constraint.ConstraintLayout>